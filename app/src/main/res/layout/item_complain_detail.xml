<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/compDetailConstraint"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/clMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/_18sdp"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/_55sdp"
            android:layout_height="@dimen/_55sdp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_placeholder_user" />


        <TextView
            android:id="@+id/textMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userImage"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@color/transparent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start"
            android:maxWidth="@dimen/_180sdp"
            android:minWidth="@dimen/_20sdp"
            android:minHeight="@dimen/_25sdp"
            android:text="On (date), I (bought, leased, rented, or had repaired) a (name of the product, with serial or model number,. \n I look forward to your reply and a resolution to my problem and will wait until (set a time limit) . \n \n Thanks \n\n Your name"
            android:textAlignment="textStart"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp" />


        <TextView
            android:id="@+id/messageName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/userImage"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_toRightOf="@+id/userImage"
            android:background="@color/transparent"
            android:fontFamily="@font/roboto_bold"
            android:gravity="start|bottom"
            android:paddingLeft="@dimen/_8sdp"
            android:text="Larry Fields"
            android:textAlignment="textStart"
            android:textColor="@color/splashColor"
            android:textSize="@dimen/_16sdp" />

        <TextView
            android:id="@+id/messageDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/messageName"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/userImage"
            android:background="@color/transparent"
            android:fontFamily="@font/roboto_regular"
            android:gravity="start|top"
            android:paddingLeft="@dimen/_8sdp"
            android:text="2020/04/08"
            android:textAlignment="textStart"
            android:textColor="@color/complaintItemTextColor"
            android:textSize="@dimen/_10sdp" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/clMessage"
        android:background="@color/pay_purple"
        app:layout_constraintBottom_toBottomOf="parent" />
</RelativeLayout>